@model WebApp.ViewComponents.PoolSelectorViewModel

@if (Model.Pools.Any())
{
    var selectedPool = Model.Pools.FirstOrDefault(p => p.Id == Model.SelectedPoolId);
    var currentYear = DateTime.Now.Year;
    var isHistoricalSeason = selectedPool?.Year < currentYear;
    var isFutureSeason = selectedPool?.Year > currentYear;
    
    <div class="pool-selector-container">
        <a href="#" class="pool-selector-link @(isHistoricalSeason ? "historical-season" : "") @(isFutureSeason ? "future-season" : "")" data-bs-toggle="modal" data-bs-target="#poolSelectorModal">
            @(selectedPool?.Year ?? Model.Pools.First().Year) Season
            @if (isHistoricalSeason)
            {
                <small class="season-badge archived-badge">Archived</small>
            }
            else if (isFutureSeason)
            {
                <small class="season-badge future-badge">Coming Up</small>
            }
        </a>
    </div>

    <!-- Pool Selector Modal -->
    <div class="modal fade" id="poolSelectorModal" tabindex="-1" aria-labelledby="poolSelectorModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="poolSelectorModalLabel">Select Season</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <div class="list-group">
                        @foreach (var pool in Model.Pools)
                        {
                            var isPast = pool.Year < currentYear;
                            var isFuture = pool.Year > currentYear;
                            
                            <button type="button" 
                                    class="list-group-item list-group-item-action @(pool.Id == Model.SelectedPoolId ? "active" : "")" 
                                    data-pool-id="@pool.Id"
                                    onclick="selectPool(@pool.Id)">
                                <div class="d-flex w-100 justify-content-between align-items-center">
                                    <div>
                                        <h6 class="mb-0 d-inline">@pool.Year Season</h6>
                                        @if (isPast)
                                        {
                                            <span class="badge bg-secondary ms-2">Archived</span>
                                        }
                                        else if (isFuture)
                                        {
                                            <span class="badge bg-info ms-2">Coming Up</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-success ms-2">Current</span>
                                        }
                                    </div>
                                    @if (pool.Id == Model.SelectedPoolId)
                                    {
                                        <i class="bi bi-check-circle-fill"></i>
                                    }
                                </div>
                            </button>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script>
        function selectPool(poolId) {
            // Set persistent cookie (expires in 1 year)
            const expiryDate = new Date();
            expiryDate.setFullYear(expiryDate.getFullYear() + 1);
            document.cookie = `poolId=${poolId}; path=/; expires=${expiryDate.toUTCString()}; SameSite=Lax`;
            // Reload page to apply new pool selection
            window.location.reload();
        }
    </script>

    <style>
        .pool-selector-container {
            margin-top: 0;
            margin-left: 0;
            padding: 0;
        }

        .pool-selector-link {
            color: #6c757d;
            text-decoration: none;
            font-weight: 400;
            font-size: 0.875rem;
            padding: 0;
            border-radius: 0.25rem;
            transition: all 0.15s ease-in-out;
            white-space: nowrap;
            display: inline-flex;
            align-items: center;
            gap: 0.375rem;
        }

        .pool-selector-link:hover {
            background-color: transparent;
            color: #212529;
            text-decoration: underline;
        }

        .pool-selector-link.historical-season {
            color: #6c757d;
            font-weight: 400;
        }

        .pool-selector-link.historical-season:hover {
            color: #495057;
        }

        .pool-selector-link.future-season {
            color: #0dcaf0;
            font-weight: 500;
        }

        .pool-selector-link.future-season:hover {
            color: #0aa2c0;
        }

        .season-badge {
            font-size: 0.65rem;
            padding: 0.125rem 0.375rem;
            border-radius: 0.25rem;
            font-weight: 600;
            text-transform: uppercase;
            letter-spacing: 0.025em;
        }

        .archived-badge {
            background-color: #6c757d;
            color: white;
        }

        .future-badge {
            background-color: #0dcaf0;
            color: #000;
        }

        #poolSelectorModal .list-group-item {
            cursor: pointer;
        }

        #poolSelectorModal .list-group-item.active {
            background-color: #0d6efd;
            border-color: #0d6efd;
        }

        #poolSelectorModal .list-group-item:hover:not(.active) {
            background-color: #f8f9fa;
        }

        #poolSelectorModal .badge {
            font-size: 0.7rem;
        }
    </style>
}