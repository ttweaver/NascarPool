@page "{poolId:int?}"
@model WebApp.Pages.Races.IndexModel
@using Microsoft.AspNetCore.Mvc.Rendering
@using WebApp.Helpers
@{
    ViewData["Title"] = "Races";
    var pools = Model.Pools.OrderByDescending(p => p.Year).ToList();
    
}
<h1 class="mb-4">Races</h1>

<div class="d-flex align-items-center w-100 mb-3">
    @if (User.IsInRole("Admin"))
    {
        <form method="get" class="d-flex align-items-center">
            <label for="PoolId" class="form-label fs-5 fw-bold text-primary me-2 mb-0">Select Pool</label>
            <select id="PoolId" name="poolId" class="form-select w-auto" onchange="this.form.submit()">
                @foreach (var pool in pools)
                {
                    <option value="@pool.Id" selected="@(pool.Id == Model.SelectedPoolId ? "selected" : null)">
                        @pool.Name (@pool.Year)
                    </option>
                }
            </select>
        </form>

        <!-- Button to launch the Create modal (aligned to the right) -->
        <button type="button" class="btn btn-primary ms-auto" data-bs-toggle="modal" data-bs-target="#createRaceModal">
            Add New Race
        </button>
    }
    else
    {
        @if (Model.Races.Any())
        {
            var selectedPool = pools.FirstOrDefault(p => p.Id == Model.SelectedPoolId);
            if (selectedPool != null)
            {
                <h2 class="fs-5 fw-bold text-primary mb-0">@selectedPool.Name (@selectedPool.Year)</h2>
            }
        }
    }
</div>

@if (User.IsInRole("Admin"))
{
    <!-- Create Race Modal -->
    <div class="modal fade" id="createRaceModal" tabindex="-1" aria-labelledby="createRaceModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <form method="post" asp-page-handler="Create">
                    <div class="modal-header">
                        <h5 class="modal-title" id="createRaceModalLabel">Create Race</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        <div asp-validation-summary="All" class="text-danger mb-2"></div>
                        <div class="mb-3">
                            <label for="CreateRaceName" class="form-label">Name</label>
                            <input type="text" class="form-control" id="CreateRaceName" name="CreateRaceName" required />
                        </div>
                        <div class="mb-3">
                            <label for="CreateRaceDate" class="form-label">Date</label>
                            <input type="date" class="form-control" id="CreateRaceDate" name="CreateRaceDate" required />
                        </div>
                        <div class="mb-3">
                            <label for="CreateRaceCity" class="form-label">City</label>
                            <input type="text" class="form-control" id="CreateRaceCity" name="CreateRaceCity" required />
                        </div>
                        <div class="mb-3">
                            <label for="CreateRaceState" class="form-label">State</label>
                            <select class="form-select" id="CreateRaceState" name="CreateRaceState" required>
                                <option value="">Select a state...</option>
                                @foreach (var state in UsStates.StateList)
                                {
                                    <option value="@state">@state</option>
                                }
                            </select>
                        </div>
                        <input type="hidden" name="PoolId" value="@Model.SelectedPoolId" />
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                        <button type="submit" class="btn btn-success">Create</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <!-- Edit Race Modal -->
    <div class="modal fade" id="editRaceModal" tabindex="-1" aria-labelledby="editRaceModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <form method="post" asp-page-handler="Edit">
                    <input type="hidden" id="EditRaceId" name="EditRaceId" />
                    <div class="modal-header">
                        <h5 class="modal-title" id="editRaceModalLabel">Edit Race</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        <div class="mb-3">
                            <label for="EditRaceName" class="form-label">Name</label>
                            <input type="text" class="form-control" id="EditRaceName" name="EditRaceName" required />
                        </div>
                        <div class="mb-3">
                            <label for="EditRaceDate" class="form-label">Date</label>
                            <input type="date" class="form-control" id="EditRaceDate" name="EditRaceDate" required />
                        </div>
                        <div class="mb-3">
                            <label for="EditRaceCity" class="form-label">City</label>
                            <input type="text" class="form-control" id="EditRaceCity" name="EditRaceCity" required />
                        </div>
                        <div class="mb-3">
                            <label for="EditRaceState" class="form-label">State</label>
                            <select class="form-select" id="EditRaceState" name="EditRaceState" required>
                                <option value="">Select a state...</option>
                                @foreach (var state in UsStates.StateList)
                                {
                                    <option value="@state">@state</option>
                                }
                            </select>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                        <button type="submit" class="btn btn-primary">Save</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <!-- Delete Race Modal -->
    <div class="modal fade" id="deleteRaceModal" tabindex="-1" aria-labelledby="deleteRaceModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <form method="post" asp-page-handler="Delete">
                    <input type="hidden" id="DeleteRaceId" name="DeleteRaceId" />
                    <input type="hidden" id="DeleteRaceCity" name="DeleteRaceCity" />
                    <input type="hidden" id="DeleteRaceState" name="DeleteRaceState" />
                    <div class="modal-header">
                        <h5 class="modal-title" id="deleteRaceModalLabel">Delete Race</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        <p>Are you sure you want to delete the following race?</p>
                        <dl class="row mb-0">
                            <dt class="col-sm-4">Name:</dt>
                            <dd class="col-sm-8" id="DeleteRaceName"></dd>
                            <dt class="col-sm-4">Location:</dt>
                            <dd class="col-sm-8" id="DeleteRaceLocation"></dd>
                        </dl>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                        <button type="submit" class="btn btn-danger">Delete</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
}

<table class="table table-striped table-bordered align-middle">
    <thead class="table-light">
        <tr>
            <th>Name</th>
            <th>Location</th>
            <th>Date</th>
            @if (User.IsInRole("Admin"))
            {
                <th>Actions</th>
            }
            <th>Picks</th>
            @if (User.IsInRole("Admin"))
            {
                <th>Enter Results</th>
            }
            <th>View Results</th>
        </tr>
    </thead>
    <tbody>
    @foreach (var race in Model.Races)
    {
        <tr>
            <td>@race.Name</td>
            <td>@race.Location</td>
            <td>@race.Date.ToShortDateString()</td>
            @if (User.IsInRole("Admin"))
            {
                <td>
                    <button type="button" class="btn btn-sm btn-warning me-1"
                            data-bs-toggle="modal"
                            data-bs-target="#editRaceModal"
                            data-race-id="@race.Id"
                            data-race-name="@race.Name"
                            data-race-date="@race.Date.ToString("yyyy-MM-dd")"
                            data-race-city="@race.City"
                            data-race-state="@race.State">
                        Edit
                    </button>
                    <button type="button" class="btn btn-sm btn-danger"
                            data-bs-toggle="modal"
                            data-bs-target="#deleteRaceModal"
                            data-race-id="@race.Id"
                            data-race-name="@race.Name"
                            data-race-city="@race.City"
                            data-race-state="@race.State"
                            data-race-location="@race.Location">
                        Delete
                    </button>
                </td>
            }
            <td>
                @if (User.IsInRole("Admin"))
                {
                    <a class="btn btn-sm btn-secondary"
                       asp-page="Picks/Edit"
                       asp-route-raceId="@race.Id">
                        Edit All Picks
                    </a>
                }
                else if (race.Date.Date <= DateTime.Now.Date)
                {
                    <a class="btn btn-sm btn-secondary"
                       asp-page="Picks/Index"
                       asp-route-raceId="@race.Id">
                        All Picks
                    </a>
                }
            </td>
            @if (User.IsInRole("Admin"))
            {
                <td>
                    <a class="btn btn-sm btn-info"
                       asp-page="Results"
                       asp-route-raceId="@race.Id">
                        Enter Results
                    </a>
                </td>
            }
            <td>
                <a class="btn btn-sm btn-success"
                   asp-page="ViewResults"
                   asp-route-raceId="@race.Id">
                    View Results
                </a>
            </td>
        </tr>
    }
    </tbody>
</table>

@if (!ViewData.ModelState.IsValid && Request.Method == "POST" && Request.Form["CreateRaceName"].Count > 0)
{
    <span id="showCreateModal"></span>
}

@section Scripts {
<script>
    @if (User.IsInRole("Admin"))
    {
        <text>
        // Edit modal population
        var editRaceModal = document.getElementById('editRaceModal');
        editRaceModal.addEventListener('show.bs.modal', function (event) {
            var button = event.relatedTarget;
            document.getElementById('EditRaceId').value = button.getAttribute('data-race-id');
            document.getElementById('EditRaceName').value = button.getAttribute('data-race-name');
            document.getElementById('EditRaceDate').value = button.getAttribute('data-race-date');
            document.getElementById('EditRaceCity').value = button.getAttribute('data-race-city');
            document.getElementById('EditRaceState').value = button.getAttribute('data-race-state');
        });

        // Delete modal population
        var deleteRaceModal = document.getElementById('deleteRaceModal');
        deleteRaceModal.addEventListener('show.bs.modal', function (event) {
            var button = event.relatedTarget;
            document.getElementById('DeleteRaceId').value = button.getAttribute('data-race-id');
            document.getElementById('DeleteRaceName').textContent = button.getAttribute('data-race-name');
            document.getElementById('DeleteRaceCity').value = button.getAttribute('data-race-city');
            document.getElementById('DeleteRaceState').value = button.getAttribute('data-race-state');
            document.getElementById('DeleteRaceLocation').textContent = button.getAttribute('data-race-location');
        });

        window.addEventListener('DOMContentLoaded', function () {
            if (document.getElementById('showCreateModal')) {
                var createModal = new bootstrap.Modal(document.getElementById('createRaceModal'));
                createModal.show();
            }
        });
        </text>
    }

    @if (User.IsInRole("Admin"))
    {
        <text>
        window.addEventListener('DOMContentLoaded', function () {
            if (document.getElementById('showCreateModal')) {
                var createModal = new bootstrap.Modal(document.getElementById('createRaceModal'));
                createModal.show();
            }
        });
        </text>
    }
</script>
}