@page
@model WebApp.Pages.Races.IndexModel
@using Microsoft.AspNetCore.Mvc.Rendering
@{
    ViewData["Title"] = "Races";
}
<h1 class="mb-4">Races</h1>

<!-- Button to launch the Create modal -->
<button type="button" class="btn btn-primary mb-3" data-bs-toggle="modal" data-bs-target="#createRaceModal">
    Create New Race
</button>

<!-- Create Race Modal -->
<div class="modal fade" id="createRaceModal" tabindex="-1" aria-labelledby="createRaceModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <form method="post" asp-page-handler="Create">
                <div class="modal-header">
                    <h5 class="modal-title" id="createRaceModalLabel">Create Race</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <div class="mb-3">
                        <label for="CreateRaceName" class="form-label">Name</label>
                        <input type="text" class="form-control" id="CreateRaceName" name="CreateRaceName" required />
                    </div>
                    <div class="mb-3">
                        <label for="CreateRaceDate" class="form-label">Date</label>
                        <input type="date" class="form-control" id="CreateRaceDate" name="CreateRaceDate" required />
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-success">Create</button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Edit Race Modal -->
<div class="modal fade" id="editRaceModal" tabindex="-1" aria-labelledby="editRaceModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <form method="post" asp-page-handler="Edit">
                <input type="hidden" id="EditRaceId" name="EditRaceId" />
                <div class="modal-header">
                    <h5 class="modal-title" id="editRaceModalLabel">Edit Race</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <div class="mb-3">
                        <label for="EditRaceName" class="form-label">Name</label>
                        <input type="text" class="form-control" id="EditRaceName" name="EditRaceName" required />
                    </div>
                    <div class="mb-3">
                        <label for="EditRaceDate" class="form-label">Date</label>
                        <input type="date" class="form-control" id="EditRaceDate" name="EditRaceDate" required />
                    </div>
                    <div class="mb-3">
                        <label for="EditRacePoolId" class="form-label">Pool</label>
                        <select class="form-select" id="EditRacePoolId" name="EditRacePoolId" required>
                            <option value="">Select Pool</option>
                            @foreach (var pool in Model.Pools)
                            {
                                <option value="@pool.Id">@pool.Name</option>
                            }
                        </select>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-primary">Save</button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Delete Race Modal -->
<div class="modal fade" id="deleteRaceModal" tabindex="-1" aria-labelledby="deleteRaceModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <form method="post" asp-page-handler="Delete">
                <input type="hidden" id="DeleteRaceId" name="DeleteRaceId" />
                <div class="modal-header">
                    <h5 class="modal-title" id="deleteRaceModalLabel">Delete Race</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    Are you sure you want to delete <span id="DeleteRaceName" class="fw-bold"></span>?
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-danger">Delete</button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Details Race Modal -->
<div class="modal fade" id="detailsRaceModal" tabindex="-1" aria-labelledby="detailsRaceModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="detailsRaceModalLabel">Race Details</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <dl class="row mb-0">
                    <dt class="col-sm-4">Name:</dt>
                    <dd class="col-sm-8" id="DetailsRaceName"></dd>
                    <dt class="col-sm-4">Date:</dt>
                    <dd class="col-sm-8" id="DetailsRaceDate"></dd>
                    <dt class="col-sm-4">Pool:</dt>
                    <dd class="col-sm-8" id="DetailsRacePool"></dd>
                </dl>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

<table class="table table-striped table-bordered align-middle">
    <thead class="table-light">
        <tr>
            <th>Name</th>
            <th>Date</th>
            <th>Pool</th>
            <th style="width: 220px;"></th>
        </tr>
    </thead>
    <tbody>
    @foreach (var race in Model.Races)
    {
        <tr>
            <td>@race.Name</td>
            <td>@race.Date.ToShortDateString()</td>
            <td>@race.Pool?.Name</td>
            <td>
                <button type="button" class="btn btn-sm btn-info me-1"
                        data-bs-toggle="modal"
                        data-bs-target="#detailsRaceModal"
                        data-race-name="@race.Name"
                        data-race-date="@race.Date.ToShortDateString()"
                        data-race-pool="@race.Pool?.Name">
                    Details
                </button>
                <button type="button" class="btn btn-sm btn-warning me-1"
                        data-bs-toggle="modal"
                        data-bs-target="#editRaceModal"
                        data-race-id="@race.Id"
                        data-race-name="@race.Name"
                        data-race-date="@race.Date.ToString("yyyy-MM-dd")"
                        data-race-poolid="@race.PoolId">
                    Edit
                </button>
                <button type="button" class="btn btn-sm btn-danger"
                        data-bs-toggle="modal"
                        data-bs-target="#deleteRaceModal"
                        data-race-id="@race.Id"
                        data-race-name="@race.Name">
                    Delete
                </button>
            </td>
        </tr>
    }
    </tbody>
</table>

@section Scripts {
<script>
    // Edit modal population
    var editRaceModal = document.getElementById('editRaceModal');
    editRaceModal.addEventListener('show.bs.modal', function (event) {
        var button = event.relatedTarget;
        document.getElementById('EditRaceId').value = button.getAttribute('data-race-id');
        document.getElementById('EditRaceName').value = button.getAttribute('data-race-name');
        document.getElementById('EditRaceDate').value = button.getAttribute('data-race-date');
        document.getElementById('EditRacePoolId').value = button.getAttribute('data-race-poolid');
    });

    // Delete modal population
    var deleteRaceModal = document.getElementById('deleteRaceModal');
    deleteRaceModal.addEventListener('show.bs.modal', function (event) {
        var button = event.relatedTarget;
        document.getElementById('DeleteRaceId').value = button.getAttribute('data-race-id');
        document.getElementById('DeleteRaceName').textContent = button.getAttribute('data-race-name');
    });

    // Details modal population
    var detailsRaceModal = document.getElementById('detailsRaceModal');
    detailsRaceModal.addEventListener('show.bs.modal', function (event) {
        var button = event.relatedTarget;
        document.getElementById('DetailsRaceName').textContent = button.getAttribute('data-race-name');
        document.getElementById('DetailsRaceDate').textContent = button.getAttribute('data-race-date');
        document.getElementById('DetailsRacePool').textContent = button.getAttribute('data-race-pool');
    });
</script>
}