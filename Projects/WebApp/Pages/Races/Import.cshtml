@page
@model WebApp.Pages.Races.ImportModel
@{
    ViewData["Title"] = "Import NASCAR Schedule";
}
<h1>Import NASCAR 2026 Schedule</h1>

<form method="post">
    <div class="mb-3">
        <label for="PoolId" class="form-label">Pool</label>
        <select asp-for="PoolId" class="form-select">
            <option value="">-- Select Pool --</option>
            @foreach (var pool in Model.Pools.OrderBy(p => p.Year))
            {
                <option value="@pool.Id">@pool.Name (@pool.Year)</option>
            }
        </select>
    </div>
    <button type="submit" class="btn btn-primary">Import Schedule</button>
</form>

@if (Model.ImportedRaces != null && Model.ImportedRaces.Any())
{
    <h2 class="mt-4">Imported Races</h2>
    <ul>
        @foreach (var race in Model.ImportedRaces)
        {
            <li>@race.Name - @race.Date.ToShortDateString()</li>
        }
    </ul>
}
@if (!ViewData.ModelState.IsValid)
{
    <div class="alert alert-danger">
        @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
        {
            <div>@error.ErrorMessage</div>
        }
    </div>
}
