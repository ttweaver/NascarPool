@page "{id}"
@model WebApp.Pages.Users.DeleteModel
@{
    ViewData["Title"] = "Delete User";
}
<h1 class="mb-4 text-danger">Delete User</h1>
<div class="alert alert-warning mb-3">
    Are you sure you want to delete this user?
</div>
<div class="card card-body shadow-sm mb-3">
    <strong>First Name:</strong> @Model.User.FirstName<br />
    <strong>Last Name:</strong> @Model.User.LastName<br />
    <strong>UserName:</strong> @Model.User.UserName
</div>
<form method="post">
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-page="Index" class="btn btn-secondary ms-2">Cancel</a>
</form>