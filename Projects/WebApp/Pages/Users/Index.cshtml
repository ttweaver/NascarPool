@page
@model WebApp.Pages.Users.IndexModel
@{
    ViewData["Title"] = "Users";
}
<h1 class="mb-4">Users</h1>
<a asp-page="Create" class="btn btn-primary mb-3">Create New User</a>
<table class="table table-striped table-bordered align-middle">
    <thead class="table-light">
        <tr>
            <th>First Name</th>
            <th>Last Name</th>
            <th>UserName</th>
            <th>Is Player</th>
            <th style="width: 200px;"></th>
        </tr>
    </thead>
    <tbody>
    @foreach (var user in Model.Users)
    {
        <tr>
            <td>@user.FirstName</td>
            <td>@user.LastName</td>
            <td>@user.UserName</td>
            <td>@(user.IsPlayer ? "Yes" : "No")</td>
            <td>
                <a asp-page="Edit" asp-route-id="@user.Id" class="btn btn-sm btn-warning me-1">Edit</a>
                <a asp-page="Details" asp-route-id="@user.Id" class="btn btn-sm btn-info me-1">Details</a>
                <a asp-page="Delete" asp-route-id="@user.Id" class="btn btn-sm btn-danger">Delete</a>
            </td>
        </tr>
    }
    </tbody>
</table>