@page
@model WebApp.Pages.Users.CreateModel
@{
    ViewData["Title"] = "Create User";
}
<h1 class="mb-4">Create User</h1>
<form method="post" class="card card-body shadow-sm">
    

    <div class="mb-3">
        <label asp-for="User.FirstName" class="form-label"></label>
        <input asp-for="User.FirstName" class="form-control" />
        <span asp-validation-for="User.FirstName" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="User.LastName" class="form-label"></label>
        <input asp-for="User.LastName" class="form-control" />
        <span asp-validation-for="User.LastName" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="User.Email" class="form-label"></label>
        <input asp-for="User.Email" class="form-control" />
        <span asp-validation-for="User.Email" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="User.Password" class="form-label"></label>
        <input asp-for="User.Password" class="form-control" type="password" />
        <span asp-validation-for="User.Password" class="text-danger"></span>
        <div class="text-muted small">Enter a secure password (min 6 characters).</div>
    </div>

    <div class="mb-3">
        <label asp-for="User.ConfirmPassword" class="form-label"></label>
        <input asp-for="User.ConfirmPassword" class="form-control" type="password" />
        <span asp-validation-for="User.ConfirmPassword" class="text-danger"></span>
    </div>

    <div class="d-flex gap-2 mb-2">
        <button type="submit" class="btn btn-success">Create</button>
        <a asp-page="Index" class="btn btn-secondary">Back to List</a>
    </div>
</form>