@page "{id:int}"
@model WebApp.Pages.Pools.DeleteModel
@{
    ViewData["Title"] = "Delete Pool";
}
<h1 class="mb-4 text-danger">Delete Pool</h1>
<div class="alert alert-warning mb-3">
    Are you sure you want to delete this pool?
</div>
<div class="card card-body shadow-sm mb-3">
    <strong>Name:</strong> @Model.Pool.Name
</div>
<form method="post">
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-page="Index" class="btn btn-secondary ms-2">Cancel</a>
</form>