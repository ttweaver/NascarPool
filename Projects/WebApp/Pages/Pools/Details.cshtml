@page "{id:int}"
@model WebApp.Pages.Pools.DetailsModel
@{
    ViewData["Title"] = "Pool Details";
}
<h1 class="mb-4">Pool Details</h1>
<div class="card card-body shadow-sm mb-3">
    <dl class="row">
        <dt class="col-sm-3">Name:</dt>
        <dd class="col-sm-9">@Model.Pool.Name</dd>
        <dt class="col-sm-3">Year:</dt>
        <dd class="col-sm-9">@Model.Pool.Year</dd>
    </dl>
</div>

@if (Model.Pool.Members != null && Model.Pool.Members.Any())
{
    <h2 class="h5 mt-4">Users in this Pool</h2>
    <ul class="list-group mb-3">
        @foreach (var user in Model.Pool.Members)
        {
            <li class="list-group-item d-flex justify-content-between align-items-center">
                <span>@user.UserName</span>
                <form method="post" asp-page-handler="RemoveUser" asp-route-id="@Model.Pool.Id" asp-route-userId="@user.Id" class="m-0 remove-user-form">
                    <button type="button" class="btn btn-sm btn-danger" data-bs-toggle="modal" data-bs-target="#confirmRemoveModal" data-userid="@user.Id" data-username="@user.UserName">Remove</button>
                </form>
            </li>
        }
    </ul>
}
else
{
    <div class="alert alert-info">No users have been added to this pool yet.</div>
}

@if (Model.Pool.Drivers != null && Model.Pool.Drivers.Any())
{
    <h2 class="h5 mt-4">Drivers in this Pool</h2>
    <ul class="list-group mb-3">
        @foreach (var driver in Model.Pool.Drivers)
        {
            <li class="list-group-item d-flex justify-content-between align-items-center">
                <span>
                    <strong>@driver.Name</strong>
                    <span class="text-muted ms-2">#@driver.CarNumber</span>
                </span>
            </li>
        }
    </ul>
}
else
{
    <div class="alert alert-info">No drivers have been added to this pool yet.</div>
}

<a asp-page="Index" class="btn btn-secondary">Back to List</a>

<!-- Bootstrap Modal for Remove Confirmation -->
<div class="modal fade" id="confirmRemoveModal" tabindex="-1" aria-labelledby="confirmRemoveModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="confirmRemoveModalLabel">Confirm Remove</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                Are you sure you want to remove <span id="modalUserName" class="fw-bold"></span> from this pool?
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-danger" id="confirmRemoveBtn">Remove</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
<script>
    let formToSubmit = null;
    const confirmModal = document.getElementById('confirmRemoveModal');
    const modalUserName = document.getElementById('modalUserName');
    const confirmRemoveBtn = document.getElementById('confirmRemoveBtn');

    document.querySelectorAll('form.remove-user-form button[type="button"]').forEach(btn => {
        btn.addEventListener('click', function (e) {
            formToSubmit = btn.closest('form');
            modalUserName.textContent = btn.getAttribute('data-username');
        });
    });

    confirmRemoveBtn.addEventListener('click', function () {
        if (formToSubmit) {
            formToSubmit.submit();
        }
    });

    // Optional: Clear form reference when modal is closed
    confirmModal.addEventListener('hidden.bs.modal', function () {
        formToSubmit = null;
        modalUserName.textContent = '';
    });
</script>
}