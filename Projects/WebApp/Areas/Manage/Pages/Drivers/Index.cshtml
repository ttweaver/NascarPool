@page "{poolId?}"
@model IndexModel
@using System.Linq
@{
    ViewData["Title"] = "Drivers";
    var pools = Model.Pools.OrderByDescending(p => p.Year).ToList();
}

<div class="d-flex align-items-center w-100 mb-3">
    <h1 class="mb-4">Drivers</h1>
    <!-- Button to launch the modal (aligned to the right) -->
    <button type="button" class="btn btn-primary ms-auto" data-bs-toggle="modal" data-bs-target="#createDriverModal">
        Add New Driver
    </button>
</div>

<!-- Bootstrap Modal for Creating a New Driver -->
<div class="modal fade" id="createDriverModal" tabindex="-1" aria-labelledby="createDriverModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <form method="post" asp-page-handler="Create">
                <div class="modal-header">
                    <h5 class="modal-title" id="createDriverModalLabel">Add New Driver</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <div class="mb-3">
                        <label for="DriverName" class="form-label">Name</label>
                        <input type="text" class="form-control" id="DriverName" name="DriverName" required />
                    </div>
                    <div class="mb-3">
                        <label for="CarNumber" class="form-label">Car Number</label>
                        <input type="text" class="form-control" id="CarNumber" name="CarNumber" required />
                    </div>
                    <input type="hidden" name="PoolId" value="@Model.PoolId" />
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-success">Create</button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Bootstrap Modal for Edit Driver -->
<div class="modal fade" id="editDriverModal" tabindex="-1" aria-labelledby="editDriverModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <form method="post" asp-page-handler="Edit" id="editDriverForm">
                <div class="modal-header">
                    <h5 class="modal-title" id="editDriverModalLabel">Edit Driver</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <input type="hidden" id="editDriverId" name="DriverId" />
                    <div class="mb-3">
                        <label for="editDriverName" class="form-label">Name</label>
                        <input type="text" class="form-control" id="editDriverName" name="DriverName" required />
                    </div>
                    <div class="mb-3">
                        <label for="editCarNumber" class="form-label">Car Number</label>
                        <input type="text" class="form-control" id="editCarNumber" name="CarNumber" required />
                    </div>
                    <input type="hidden" id="editPoolId" name="PoolId" value="@Model.PoolId" />
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-primary">Save</button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Bootstrap Modal for Delete Confirmation -->
<div class="modal fade" id="deleteDriverModal" tabindex="-1" aria-labelledby="deleteDriverModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <form method="post" id="deleteDriverForm">
                <input type="hidden" name="DriverId" id="deleteDriverId" />
                <div class="modal-header">
                    <h5 class="modal-title" id="deleteDriverModalLabel">Delete Driver</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    Are you sure you want to delete <span id="deleteDriverName" class="fw-bold"></span>?
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-danger">Delete</button>
                </div>
            </form>
        </div>
    </div>
</div>

<table class="table table-striped table-bordered align-middle">
    <thead class="table-light">
        <tr>
            <th>Name</th>
            <th>Car Number</th>
            <th style="width: 160px;"></th>
        </tr>
    </thead>
    <tbody>
    @foreach (var driver in Model.Drivers
                    .OrderBy(d => d.Name ?? string.Empty))
    {
        <tr>
            <td>@driver.Name</td>
            <td>@driver.CarNumber</td>
            <td>
                <div class="btn-group" role="group" aria-label="Driver actions">
                    <button type="button"
                            class="btn btn-sm btn-primary me-2 rounded"
                            data-bs-toggle="modal"
                            data-bs-target="#editDriverModal"
                            data-driver-id="@driver.Id"
                            data-driver-name="@driver.Name"
                            data-car-number="@driver.CarNumber">
                        Edit
                    </button>

                    <button type="button"
                            class="btn btn-sm btn-danger rounded"
                            data-bs-toggle="modal"
                            data-bs-target="#deleteDriverModal"
                            data-driver-id="@driver.Id"
                            data-driver-name="@driver.Name">
                        Delete
                    </button>
                </div>
            </td>
        </tr>
    }
    </tbody>
</table>

@section Scripts {
    <script>
        // Reset modal form fields when closed
        const createDriverModal = document.getElementById('createDriverModal');
        createDriverModal.addEventListener('hidden.bs.modal', function () {
            createDriverModal.querySelector('form').reset();
        });

        // Handle edit modal population
        const editDriverModal = document.getElementById('editDriverModal');
        editDriverModal.addEventListener('show.bs.modal', function (event) {
            var button = event.relatedTarget;
            var driverId = button.getAttribute('data-driver-id');
            var driverName = button.getAttribute('data-driver-name');
            var carNumber = button.getAttribute('data-car-number');

            document.getElementById('editDriverId').value = driverId;
            document.getElementById('editDriverName').value = driverName;
            document.getElementById('editCarNumber').value = carNumber;
            document.getElementById('editPoolId').value = '@Model.PoolId';
        });

        // Handle delete modal population
        const deleteDriverModal = document.getElementById('deleteDriverModal');
        deleteDriverModal.addEventListener('show.bs.modal', function (event) {
            var button = event.relatedTarget;
            var driverId = button.getAttribute('data-driver-id');
            var driverName = button.getAttribute('data-driver-name');
            document.getElementById('deleteDriverId').value = driverId;
            document.getElementById('deleteDriverName').textContent = driverName;
        });

        // Set the form actions to use the appropriate handlers
        document.getElementById('deleteDriverForm').setAttribute('action', '?handler=Delete');
        document.getElementById('editDriverForm').setAttribute('action', '?handler=Edit');
    </script>
}