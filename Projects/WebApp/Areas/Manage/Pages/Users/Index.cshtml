@page
@model IndexModel
@{
    ViewData["Title"] = "Users";
}
<div class="d-flex align-items-center justify-content-between mb-4">
    <h1 class="mb-0">Users</h1>
    <div>
        <a asp-page="ManageAllowedUsers" class="btn btn-secondary me-2">
            <i class="bi bi-person-check"></i> Manage Allowed Users
        </a>
        <a asp-page="Create" class="btn btn-primary">Create New User</a>
    </div>
</div>

<table class="table table-striped table-bordered align-middle">
    <thead class="table-light">
        <tr>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Email</th>
            <th style="width: 200px;"></th>
        </tr>
    </thead>
    <tbody>
    @foreach (var user in Model.Users)
    {
        <tr>
            <td>@user.FirstName</td>
            <td>@user.LastName</td>
            <td>@user.Email</td>
            <td>
                <a asp-page="Edit" asp-route-id="@user.Id" class="btn btn-sm btn-warning me-1">Edit</a>
                <a asp-page="Delete" asp-route-id="@user.Id" class="btn btn-sm btn-danger">Delete</a>
            </td>
        </tr>
    }
    </tbody>
</table>

@if (!Model.Users.Any())
{
    <div class="alert alert-secondary">
        <i class="bi bi-inbox"></i> No players found. Click "Create New Player" to add one.
    </div>
}