@page
@model WebApp.Areas.Manage.Pages.IndexModel
@{
    ViewData["Title"] = "Manager Dashboard";
}

<div class="container-fluid">
    <div class="mb-5">
        <h1 class="display-4 mb-3">
            <i class="bi bi-speedometer2 me-2"></i>
            Manager Dashboard
        </h1>
        <p class="lead text-muted">Welcome to the Fast Lap Fantasy management center. Manage pools, races, drivers, and players from here.</p>
    </div>

    <!-- Quick Stats -->
    <div class="row g-4 mb-5">
        <div class="col-md-3">
            <div class="card border-primary h-100">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <div class="flex-shrink-0">
                            <i class="bi bi-trophy text-primary" style="font-size: 2.5rem;"></i>
                        </div>
                        <div class="flex-grow-1 ms-3">
                            <h5 class="card-title mb-0">@Model.PoolCount</h5>
                            <p class="card-text text-muted mb-0">Total Pools</p>
                        </div>
                    </div>
                </div>
                <div class="card-footer bg-transparent border-primary">
                    <a asp-area="Manage" asp-page="/Pools/Index" class="btn btn-sm btn-primary w-100">Manage Pools</a>
                </div>
            </div>
        </div>

        <div class="col-md-3">
            <div class="card border-success h-100">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <div class="flex-shrink-0">
                            <i class="bi bi-flag-fill text-success" style="font-size: 2.5rem;"></i>
                        </div>
                        <div class="flex-grow-1 ms-3">
                            <h5 class="card-title mb-0">@Model.RaceCount</h5>
                            <p class="card-text text-muted mb-0">Total Races</p>
                        </div>
                    </div>
                </div>
                <div class="card-footer bg-transparent border-success">
                    <a asp-area="Manage" asp-page="/Races/Index" class="btn btn-sm btn-success w-100">Manage Races</a>
                </div>
            </div>
        </div>

        <div class="col-md-3">
            <div class="card border-warning h-100">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <div class="flex-shrink-0">
                            <i class="bi bi-car-front-fill text-warning" style="font-size: 2.5rem;"></i>
                        </div>
                        <div class="flex-grow-1 ms-3">
                            <h5 class="card-title mb-0">@Model.DriverCount</h5>
                            <p class="card-text text-muted mb-0">Total Drivers</p>
                        </div>
                    </div>
                </div>
                <div class="card-footer bg-transparent border-warning">
                    <a asp-area="Manage" asp-page="/Drivers/Index" class="btn btn-sm btn-warning w-100">Manage Drivers</a>
                </div>
            </div>
        </div>

        <div class="col-md-3">
            <div class="card border-info h-100">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <div class="flex-shrink-0">
                            <i class="bi bi-people-fill text-info" style="font-size: 2.5rem;"></i>
                        </div>
                        <div class="flex-grow-1 ms-3">
                            <h5 class="card-title mb-0">@Model.PlayerCount</h5>
                            <p class="card-text text-muted mb-0">Total Players</p>
                        </div>
                    </div>
                </div>
                <div class="card-footer bg-transparent border-info">
                    <a asp-area="Manage" asp-page="/Players/Index" class="btn btn-sm btn-info w-100">Manage Players</a>
                </div>
            </div>
        </div>
    </div>

    <!-- Quick Actions -->
    <div class="row g-4">
        <div class="col-lg-8">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h5 class="card-title mb-0">
                        <i class="bi bi-lightning-fill me-2"></i>
                        Quick Actions
                    </h5>
                </div>
                <div class="card-body">
                    <div class="list-group list-group-flush">
                        <a asp-area="Manage" asp-page="/Pools/Create" class="list-group-item list-group-item-action">
                            <div class="d-flex w-100 justify-content-between align-items-center">
                                <div>
                                    <h6 class="mb-1">Create New Pool</h6>
                                    <p class="mb-0 text-muted small">Start a new season for your fantasy pool</p>
                                </div>
                                <i class="bi bi-plus-circle text-primary" style="font-size: 1.5rem;"></i>
                            </div>
                        </a>
                        <a asp-area="Manage" asp-page="/Races/Index" class="list-group-item list-group-item-action">
                            <div class="d-flex w-100 justify-content-between align-items-center">
                                <div>
                                    <h6 class="mb-1">Manage Races</h6>
                                    <p class="mb-0 text-muted small">Add, edit, or delete races for the current season</p>
                                </div>
                                <i class="bi bi-calendar-event text-success" style="font-size: 1.5rem;"></i>
                            </div>
                        </a>
                        <a asp-area="Manage" asp-page="/Drivers/Index" class="list-group-item list-group-item-action">
                            <div class="d-flex w-100 justify-content-between align-items-center">
                                <div>
                                    <h6 class="mb-1">Manage Drivers</h6>
                                    <p class="mb-0 text-muted small">Add or update driver information for pools</p>
                                </div>
                                <i class="bi bi-person-badge text-warning" style="font-size: 1.5rem;"></i>
                            </div>
                        </a>
                        <a asp-area="Manage" asp-page="/Players/Index" class="list-group-item list-group-item-action">
                            <div class="d-flex w-100 justify-content-between align-items-center">
                                <div>
                                    <h6 class="mb-1">Manage Players</h6>
                                    <p class="mb-0 text-muted small">View and manage registered players</p>
                                </div>
                                <i class="bi bi-person-lines-fill text-info" style="font-size: 1.5rem;"></i>
                            </div>
                        </a>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-lg-4">
            <div class="card shadow-sm">
                <div class="card-header bg-success text-white">
                    <h5 class="card-title mb-0">
                        <i class="bi bi-book me-2"></i>
                        Resources
                    </h5>
                </div>
                <div class="card-body">
                    <div class="list-group list-group-flush">
                        <a asp-area="Manage" asp-page="/Help/Index" class="list-group-item list-group-item-action d-flex justify-content-between align-items-center">
                            <span>Setup Guide</span>
                            <i class="bi bi-arrow-right"></i>
                        </a>
                        <a asp-area="" asp-page="/Dashboard" class="list-group-item list-group-item-action d-flex justify-content-between align-items-center">
                            <span>Player Dashboard</span>
                            <i class="bi bi-arrow-right"></i>
                        </a>
                    </div>

                    <div class="mt-4 p-3 bg-light rounded">
                        <h6 class="text-muted mb-2">Need Help?</h6>
                        <p class="small mb-2">Check out the Setup Guide for step-by-step instructions on configuring your season.</p>
                        <a asp-area="Manage" asp-page="/Help/Index" class="btn btn-sm btn-outline-success">View Guide</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>