@page "{raceId:int}"
@model WebApp.Areas.Manage.Pages.Races.ResultsModel
@using Microsoft.AspNetCore.Mvc.Rendering
@{
    ViewData["Title"] = "Enter Race Results";
}
<h1>Enter Results for @Model.Race?.Name (@Model.Race?.Date.ToShortDateString())</h1>

@if (TempData["Success"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <i class="bi bi-check-circle-fill"></i> @TempData["Success"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

@if (!ViewData.ModelState.IsValid)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <i class="bi bi-exclamation-triangle-fill"></i>
        @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
        {
            <div>@error.ErrorMessage</div>
        }
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<form method="post">
    <input type="hidden" name="RaceId" value="@Model.RaceId" />
    <button type="submit" class="btn btn-success mb-3">Save Results</button>
    <a asp-page="/Races/Index" class="btn btn-secondary mb-3 ms-2">Back to Races</a>
    <div class="form-check mb-3">
        <input class="form-check-input" type="checkbox" id="showAllDrivers" 
               @(Model.ShowAllDrivers ? "checked" : "") 
               onchange="window.location.href = '?raceId=@Model.RaceId&showAllDrivers=' + this.checked;" />
        <label class="form-check-label" for="showAllDrivers">
            Show all drivers (not just picked drivers)
        </label>
    </div>
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Driver</th>
                <th>Car #</th>
                <th>Place</th>
            </tr>
        </thead>
        <tbody>
        @for (int i = 0; i < Model.Drivers.Count; i++)
        {
            var driver = Model.Drivers[i];
            var result = Model.DriverResults.ContainsKey(driver.Id) ? Model.DriverResults[driver.Id] : null;
            <tr>
                <td>
                    @driver.Name
                    <input type="hidden" name="DriverIds" value="@driver.Id" />
                </td>
                <td>@driver.CarNumber</td>
                <td>
                    <input type="number" class="form-control form-control-sm" style="width: 70px; display: inline-block;"
                           name="Places" min="1" max="@Model.Drivers.Count"
                           value="@(result?.Place ?? 0)" required />
                </td>
            </tr>
        }
        </tbody>
    </table>
    <button type="submit" class="btn btn-success mb-3">Save Results</button>
    <a asp-page="/Races/Index" class="btn btn-secondary mb-3 ms-2">Back to Races</a>
</form>