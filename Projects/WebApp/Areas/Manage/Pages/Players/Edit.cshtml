@page "{id}"
@model EditModel
@{
    ViewData["Title"] = "Edit Player";
}
<h1 class="mb-4">Edit Player</h1>

<form method="post" class="card card-body shadow-sm">
    <input type="hidden" asp-for="User.Id" />

    <div class="mb-3">
        <label asp-for="User.FirstName" class="form-label"></label>
        <input asp-for="User.FirstName" class="form-control" />
        <span asp-validation-for="User.FirstName" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="User.LastName" class="form-label"></label>
        <input asp-for="User.LastName" class="form-control" />
        <span asp-validation-for="User.LastName" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="User.UserName" class="form-label"></label>
        <input asp-for="User.UserName" class="form-control" />
        <span asp-validation-for="User.UserName" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="User.Email" class="form-label"></label>
        <input asp-for="User.Email" class="form-control" />
        <span asp-validation-for="User.Email" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="User.PrimaryDriverFirstHalfId" class="form-label">Primary Driver — First Half</label>
        <select asp-for="User.PrimaryDriverFirstHalfId" class="form-select" asp-items="Model.DriverOptions">
            <option value="">-- None --</option>
        </select>
        <span asp-validation-for="User.PrimaryDriverFirstHalfId" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="User.PrimaryDriverSecondHalfId" class="form-label">Primary Driver — Second Half</label>
        <select asp-for="User.PrimaryDriverSecondHalfId" class="form-select" asp-items="Model.DriverOptions">
            <option value="">-- None --</option>
        </select>
        <span asp-validation-for="User.PrimaryDriverSecondHalfId" class="text-danger"></span>
    </div>

    <div class="form-check mb-3">
        <input asp-for="User.IsPlayer" class="form-check-input" />
        <label asp-for="User.IsPlayer" class="form-check-label">Is Player</label>
        <span asp-validation-for="User.IsPlayer" class="text-danger"></span>
    </div>

    <div class="d-flex gap-2">
        <button type="submit" class="btn btn-primary">Save</button>
        <a asp-page="Index" class="btn btn-secondary">Back to List</a>
    </div>
</form>